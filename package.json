{
  "name": "blog-template",
  "version": "0.0.0",
  "scripts": {
    "start": "ts-node server/server",
    "dev": "nodemon",
    "prod": "node ./dist/server/server.js",
    "build:server": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build:client": "tsc && vite build",
    "build": "npm run build:client && npm run build:server",
    "lint": "eslint \"{src,server}/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"server/**/*.ts\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "preact": "^10.5.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.1.5",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "alias-hq": "^5.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  }
}
